generator client {
  provider = "prisma-client-js"
 
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model User {
  id        String   @id @default(uuid())
  username  String
  email     String   @unique
  createdAt DateTime @default(now())

  messages  ChatMessage[]
  groups    GroupMember[] @relation("UserGroups")
}

model ChatMessage {
  id        String   @id @default(uuid())
  chatId    String
  senderId  String
  content   String?
  createdAt DateTime @default(now())

  sender    User     @relation(fields: [senderId], references: [id])

  @@index([content])
}

model Group {
  id          String   @id @default(uuid())
  name        String
  description String?
  createdAt   DateTime @default(now())

  members     GroupMember[] @relation("GroupMembers")

  @@index([name])
}

model GroupMember {
  id      String @id @default(uuid())
  userId  String
  groupId String
  role    String

  user  User @relation("UserGroups", fields: [userId], references: [id], map: "GroupMember_user_fkey")
  group Group @relation("GroupMembers", fields: [groupId], references: [id], map: "GroupMember_group_fkey")
}

model Channel {
  id          String   @id @default(uuid())
  name        String
  description String?
  isPublic    Boolean  @default(true)
  createdAt   DateTime @default(now())

  @@index([name])
}
